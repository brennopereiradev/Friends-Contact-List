<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" referrerpolicy="no-referrer" />
    <title>Contacts</title>
  </head>
  <body>
    <div class="container">
      <header>
        <nav class="navbar navbar-expand-lg bg-darkblue">
          <div class="container-fluid">
          <%= link_to home_index_path, class:"me-3" do %>
            <%= image_tag "f_list.png", class:"logo" %>
          <% end %> 
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0 navigation">
                <li class="nav-item p-2">
                  <%= link_to "Contacts", root_path, class:"nav-link" %>
                </li>
                <li class="nav-item p-2">
                  <%= link_to "About me", home_about_path, class:"nav-link" %>
                </li>
                <% if user_signed_in? %>
                </ul>
                <div class="d-flex">
                  <%= link_to "Account", edit_user_registration_path, class:"btn btn-outline-secondary me-1" %>
                  <%= button_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-outline-danger me-1" %>
                </div>
              <% else %>
              </ul>
              <div class="d-flex">
              <%= link_to new_user_session_path, class:"btn btn-outline-light" do %>
              <i class="fa-solid fa-user-lock"></i> Login / Register
              <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </nav>
    </header
  <main>
  <div class="container rounded-bottom border border-secondary p-3 cont-main">
