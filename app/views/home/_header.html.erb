<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" referrerpolicy="no-referrer" />
    <title>Contacts</title>
  </head>
  <body>
  <div class="container">
      <header>
        <nav class="navbar navbar-expand-lg bg-darkblue rounded-top mt-3">
          <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <%= image_tag "f_list.png", class:"logo" %>
                  <%= link_to "Home", home_index_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <i class="fa-solid fa-address-book"></i>
                  <%= link_to "Contacts", root_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <i class="fa-solid fa-user-ninja"></i>
                  <%= link_to "About me", home_about_path, class:"nav-link" %>
                </li>
                <% if user_signed_in? %>
              </ul>
              <ul class="navbar-nav">
                <li class="nav-item">
                  <i class="fa-solid fa-user-check"></i>
                  <%= link_to "Account", edit_user_registration_path, class:"nav-link" %>
                </li>
                <li class="nav-item">
                  <i class="fa-solid fa-person-running"></i>
                  <%= button_to "Logout", destroy_user_session_path, method: :delete, class:"nav-link-button" %>
                </li>
              </ul>
              <% else %>
              </ul>
              <div class="d-flex">
                <ul class="navbar-nav">
                  <li class="nav-item">
                  <i class="fa-solid fa-user-lock"></i>
                  <%= link_to "Login / Register", new_user_session_path, class:"nav-link" %>
                  </li>
                </ul>
              </div>
              <% end %>
            </div>
          </div>
        </nav>
      </header>