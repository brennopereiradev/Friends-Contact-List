<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center mt-5">
    <div class="box">
      <div class="bg-green2 bg-opacity-75 text-darkblue p-3 rounded-top">
        <div class="row d-flex align-items-center">
          <div class="col text-white">
            <strong><i class="fa-solid fa-door-open fa-2xl"></i>&nbsp;&nbsp;Register</strong>
          </div>
        </div>
      </div>
      <div class="instructions bg-light rounded-bottom p-3">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-group mb-3">
          <i class="fa-solid fa-envelope"></i>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"ps-5" %>
        </div>
        <div class="input-group mb-3">
          <i class="fa-solid fa-key"></i>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"ps-5"  %>
        </div>
        <div class="input-group mb-3">
          <i class="fa-solid fa-key"></i>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Retype Password", class:"ps-5"  %>
        </div>
      </div>
      <div class="text-end register-link p-3">
        <%= f.submit "Register", class:"btn btn-success mt-4" %>
      </div>
    </div>
  </div>
<% end %>