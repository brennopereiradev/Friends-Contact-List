<div class="d-flex justify-content-center mt-5">
  <div class="box-register p-3 me-3">
    <div class="bg-green2 bg-opacity-75 text-darkblue p-3 rounded-top">
      <div class="row d-flex align-items-center">
        <div class="col text-white">
          <strong><i class="fa-solid fa-door-open fa-2xl"></i>&nbsp;&nbsp;Forgot Your password?</strong>
        </div>
      </div>
    </div>
    <div class="instructions bg-light rounded-bottom p-3 mb-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-group mb-3 mt-3">
          <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
        </div>
        <div class="text-end mt-5">
          <%= f.submit "Reset password", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
