<div class="bg-dark bg-opacity-75 text-white p-2 rounded-top">
  <div class="row d-flex align-items-center">
    <div class="col">
      <strong><i class="far fa-id-card"></i> Forgot your password?</strong>
    </div>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="input-group mb-3 mt-3">
    <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>
  
  <div class="text-end mt-3">
    <%= f.submit "Reset password", class:"btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
