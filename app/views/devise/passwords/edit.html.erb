<div class="bg-dark bg-opacity-75 text-white p-2 rounded-top">
  <div class="row d-flex align-items-center">
    <div class="col">
      <strong><i class="far fa-id-card"></i> Change your password</strong>
    </div>
  </div>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em><br />
  <% end %>
  <div class="input-group mb-3 mt-3">
    <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"Password", class:"form-control" %>
  </div>
  <div class="input-group mb-3 mt-3">
    <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm new password", class:"form-control" %>
  </div>
  <div class="text-end mt-3">
    <%= f.submit "Change my password", class:"btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
