<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="d-flex justify-content-center align-items-center">
    <div class="row">
      <div class="col">
        <div class="box">
          <div class="bg-green2 bg-opacity-75 text-darkblue p-3 rounded">
            <div class="row d-flex align-items-center">
              <div class="col">
                <strong><i class="fa-solid fa-door-open fa-2xl"></i>&nbsp;&nbsp;Login</strong>
              </div>
            </div>
          </div>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", required:"required" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", required:"required" %>
          <% if devise_mapping.rememberable? %>
            <div class="d-flex align-items-center">
              <%= f.check_box :remember_me %><%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="text-end register-link">
          <%= f.submit "Login", class:"btn btn-success btn-lg" %>
        <% end %>
        <%= render "devise/shared/links" %>
         </div>
      </div>
    </div>
    <div class="col">
      <div class="box-register">
        <div class="bg-green bg-opacity-75 text-darkblue p-3 rounded">
          <div class="row d-flex align-items-center">
            <div class="col">
              <strong><i class="fa-solid fa-door-closed fa-2xl"></i>&nbsp;&nbsp;Register</strong>
            </div>
          </div>
        </div>
        <ul class="instructions bg-light rounded-bottom">
            <li class="mt-3 mb-3">If You don't have a login yet just click on the button bellow and register your user.</li>
            <li class="mb-3">Is very fast and easy!</li>
        </ul>
        <div class="text-end">
            <%= link_to "Register", new_user_registration_path, class:"btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>