<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="p-3 border border-secondary rounded">
    <div class="input-group">
      <%= form.text_field :first_name, placeholder:"First name", class:"form-control" %>
      <%= form.text_field :last_name, placeholder:"Last name", class:"form-control"  %>
    </div>
    <div class="input-group">
      <%= form.text_field :email, placeholder:"Email", class:"form-control" %>
      <%= form.text_field :phone, placeholder:"Phone", class:"form-control"  %>
    </div>
    <div class="input-group">
      <%= form.text_field :address, placeholder:"Address", class:"form-control" %>
      <%= form.text_field :instagram, placeholder:"Instagram", class:"form-control"  %>
    </div>
    <div class="input-group">
      <%= form.number_field :user_id, id: :contact_user_id , value: current_user.id, type: :hidden %>
    </div>

    <div class="mt-3 text-end">
      <%= form.submit class:"btn btn-sm btn-success" %>
    </div>
  </div>
<% end %>
