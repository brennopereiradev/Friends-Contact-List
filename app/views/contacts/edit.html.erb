<div class="bg-dark bg-opacity-75 text-white p-2 rounded-top">
  <div class="row d-flex align-items-center">
    <div class="col">
      <strong><i class="far fa-id-card"></i> Contact: <%= @contact.first_name + ' ' + @contact.last_name %> -  UPDATE</strong>
    </div>
  </div>
</div>
<%= render "form", contact: @contact %>

<div class="mt-3 p-3">
<%= link_to contacts_path, class:"btn btn-secondary" do %>
  <i class="fas fa-clipboard-list"></i> Back to contacts list
<% end %> 

<%= link_to @contact, class:"btn btn-info" do %>
  <i class="far fa-arrow-alt-circle-left"></i> Show this contact
<% end %> 
</div>
